<mvc:View controllerName="com.aifa.sap.northwindemployee.controller.main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
    <content>
    
     <Panel id="listPanel">
     <VBox id="Vbox" visible="true">
    
    </VBox>
                <List id="employeeList" mode="SingleSelectMaster" items="{/Employees}" selectionChange ="onSelectEmployee">
                    <items>
                        <StandardListItem id="listitem" title="{FirstName} {LastName}" description="ID: {EmployeeID}" />
                    </items>
                </List>
                
                
            </Panel>
 
            <!-- Employee Details Panel (Initially Hidden) -->
            <Panel id="detailsPanel" visible="false">
                <VBox >
                <Button text="Back" press="onBack" />
                    <Text text="Name :{FirstName} {LastName}"/>
                    <Text text="ID: {EmployeeID}" />
                    <Text text="Title: {Title}"/>
                     <Text text="Hire Date: {HireDate}"/>
                      <Text text="Phone Number: {HomePhone}"/>
                       <Text text="Notes: {Notes}"/>
                        <Text text="BirthDate: {BirthDate}"/>
                         <Text text="Region: {Region}"/>
                         <Text text="Postal Code: {PostalCode}"/>
                    <Text text="Address: {Address}, {City}, {Country}" />
                   
                </VBox>
            </Panel>
           

    </content>
    </Page>
</mvc:View>